<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- spring life cycle  -->
    <bean id="lifeCycleBeanFactoryPostProcessor"
          class="com.mimu.simple.spring.bean.lifecycle.LifeCycleBeanFactoryPostProcessor"/>
    <bean id="lifeCycleBeanPostProcessor" class="com.mimu.simple.spring.bean.lifecycle.LifeCycleBeanPostProcessor"/>
    <bean id="classBean" class="com.mimu.simple.spring.bean.lifecycle.ClassBean"/>
    <bean id="person" class="com.mimu.simple.spring.bean.lifecycle.Person" init-method="customInit"
          destroy-method="customDestory"/>

</beans>